{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "description": "Renovate-Konfiguration des KeePass-Plugin-Repos",
  "labels": ["üë∑ renovate"],
  "prHourlyLimit": 20,
  "recreateWhen": "always",
  "prTitle": "{{commitMessage}}",
  "commitMessagePrefix": "‚¨ÜÔ∏è ",
  "commitMessageAction": "Upgrade",
  "commitMessageTopic": "Abh√§ngigkeit {{depName}}",
  "commitMessageExtra": "auf {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageAction": "Lockfile-Wartung",
    "prBodyDefinitions": {
      "Change": "Alle Locks aktualisiert"
    }
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["pin"],
      "commitMessagePrefix": "üìå ",
      "commitMessageAction": "Pinne",
      "addLabels": ["pin"]
    },
    {
      "matchUpdateTypes": ["rollback"],
      "commitMessagePrefix": "‚¨áÔ∏è ",
      "commitMessageAction": "Downgrade"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["plugin-data/.*\\.json$"],
      "matchStrings": [
        "\"name\": \"(?<depName>[^\"]+)\",\\s*\"version\": \"(?<currentValue>[^\"]+)\",\\s*\"sourceType\": \"github\""
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "{{depName}}",
      "extractVersionTemplate": "^v?(?<version>.*)$",
      "versioningTemplate": "semver"
    }
  ]
}
